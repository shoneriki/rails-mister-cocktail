
<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container-banner">
    <p class="text-white"><%= @cocktail.name.upcase %></p>
    
    <% @cocktail.doses.each do |dose| %>
      <li class="text-white"><%= dose.description %> of <%= dose.ingredient.name %></li>
      <p><%= link_to "Remove dose", dose_path(dose),  method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></p>
    <% end %>
   
  </div>
</div>
 
  <p><%= link_to "Add Ingredients", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"  %></p>  
  <p><%= link_to  "All Cocktails", cocktails_path, class:"btn btn-success" %></p>
</div>







